#!/usr/bin/make -f
# -*- makefile -*-

# Uncomment this to turn on verbose mode.
export DH_VERBOSE=1

# This has to be exported to make some magic below work.
export DH_OPTIONS=-v


%:
	dh $@ 

override_dh_auto_configure:
	dh_auto_configure -- --localstatedir=/var \
		-- --sysconfigdir=/etc -- --libdir=/usr/lib \
		-- --syslibdir=/lib -- --enable-split-usr -- --with-rootprefix=

override_dh_auto_test:
	dh_auto_install
	systemd --test --system
